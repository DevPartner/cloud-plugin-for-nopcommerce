@{
    Layout = "~/Plugins/DevPartner.CloudStorage/Views/_DP_ConfigurePlugin.cshtml";
    Html.SetActiveMenuItemSystemName("DP_CloudSettingsAzure");
}


@model DevPartner.Nop.Plugin.CloudStorage.Azure.Models.ConfigurationModel

<form asp-controller="AzureBlobCloudStorage" asp-action="Configure" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="ConnectionString" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="ConnectionString" />
            <span asp-validation-for="ConnectionString"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            &nbsp;
        </div>
        <div class="col-md-9">
            <div class="pull-left">
                <input type="submit" name="save-main-settings" class="btn bg-blue" onclick="return confirm('@T("Admin.Common.AreYouSure")');" value="@T("DevPartner.CloudStorage.ConfigureModel.ButtonSave")" />
            </div>
        </div>
    </div>
</form>
