@using Amazon

@model DevPartner.Nop.Plugin.CloudStorage.Amazon.Models.ConfigurationModel

@{
    //Layout = "~/Plugins/DevPartner.CloudStorage/Views/_DP_ConfigurePlugin.cshtml";
    Layout = "_ConfigurePlugin";
    NopHtml.SetActiveMenuItemSystemName("DP_CloudSettingsAmazon");
    var enumerableAllRegions = RegionEndpoint.EnumerableAllRegions;
}

    <form asp-controller="AmazonCloudStorage" asp-action="Configure" method="post">
        @Html.AntiForgeryToken()


        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="AwsAccessKeyId" />
            </div>
            <div class="col-md-9">
                <input asp-for="@Model.AwsAccessKeyId" class="form-control" />
                <span asp-validation-for="AwsAccessKeyId"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="AwsSecretAccessKey" />
            </div>
            <div class="col-md-9">
                <input asp-for="@Model.AwsSecretAccessKey" class="form-control" />
                <span asp-validation-for="AwsSecretAccessKey"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="RegionEndPointSystemName" />
            </div>
            <div class="col-md-9">
                <select asp-for="@Model.RegionEndPointSystemName" class="form-control">
                    @foreach (var regionEndPoint in enumerableAllRegions)
                    {
                        <option value="@regionEndPoint.SystemName">@regionEndPoint.DisplayName</option>
                    }
                </select>
                <span asp-validation-for="RegionEndPointSystemName"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="DomainNameForCDN" />
            </div>
            <div class="col-md-9">
                <input asp-for="@Model.DomainNameForCDN" class="form-control" />
                <span asp-validation-for="DomainNameForCDN"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-9">
                <div class="pull-left">
                    <input type="submit" name="save-main-settings" class="btn bg-blue" onclick="return confirm('@T("Admin.Common.AreYouSure")');" value="@T("DevPartner.CloudStorage.ConfigureModel.ButtonSave")" />
                </div>
            </div>
        </div>
    </form>
